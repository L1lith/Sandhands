{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "never"],
        "indent": ["error", 4]
    }
}
